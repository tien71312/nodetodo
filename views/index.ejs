<html ng-app="app.todos">
    <head>
        <title>Node / Angular todos</title>
        <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css"/>
        <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
        <link rel="stylesheet" href="./assets/css/style.css">
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.2/css/xeditable.min.css"/>
        <script src="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.2/js/xeditable.min.js"></script>
        <!---load app-->
        <script src="assets/js/main/app.js"></script>
        <script src="assets/js/main/services/svTodos.js"></script> 
    </head>
    <body ng-controller="todoController">
        <div class="row" style="  margin-left: 20px; ">  
            <div class="card-body">
                <h1>{{appName}} <span class="label label-info">{{ todos.length}}</span></h1>
            </div>
            <div id="todo-list" class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="checkbox" ng-repeat="todo in todos">
                        <a href ng-click="deleteTodo(todo)" ><i class='fa fa-remove' style='color: rgb(241, 36, 9)'></i></a>
                        <a href ng-click="textBtnForm.$show()" ng-hide="textBtnForm.$visible"><i class="fa fa-edit"></i></a>
                        <input type="checkbox" ng-model="todo.isDone" ng-change="updateTodo(todo)">
                         <span ng-class="{strike: todo.isDone}" editable-text="todo.text" e-form="textBtnForm" onaftersave="updateTodo(todo)">
                            {{ todo.text }}
                        </span> 
                    </div>
                    <p class="text-center" ng-show="loading">
                        <span class="fa fa-spinner fa-spin fa-2x"></span>
                    </p>                  
                </div>
            </div>
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text-center">
                    <form>
                        <div class="form-group">
                            <input type="text" ng-model="formData.text" class="form-control input-lg text-center" placeholder="what do you want todo?">

                        </div>
                        <button type="submit" class="btn btn-primary btn-larg" ng-disabled="!formData.text" ng-click="createTodo()">Add</button>
                    </form>
                </div>
            </div>
          </div>
    </body>
</html>